generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model users {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  first_name  String
  last_name   String
  password    String
  image       String?
  image_color String?
  created_at  DateTime @default(now())
  updated_at  DateTime @default(now())
}

model conversations {
  id              Int        @id @default(autoincrement())
  participant_ids Int[]      @default([])
  created_at      DateTime   @default(now())
  updated_at      DateTime   @default(now())
  messages        messages[]
}

model messages {
  id              Int           @id @default(autoincrement())
  conversation_id Int
  sender_id       Int
  receiver_id     Int
  message         String
  created_at      DateTime      @default(now())
  updated_at      DateTime      @default(now())
  conversation    conversations @relation(fields: [conversation_id], references: [id])
}
